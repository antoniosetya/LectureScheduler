<Window x:Class="LectureScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LectureScheduler"
        mc:Ignorable="d"
        Title="Lecture Scheduler" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="193*"/>
            <ColumnDefinition Width="203*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="LoadFileButton" Content="Load File" HorizontalAlignment="Left" Height="41" Margin="10,10,0,0" VerticalAlignment="Top" Width="99" RenderTransformOrigin="0.556,0.146" Click="LoadFileButton_Click"/>
        <Label x:Name="FileNameLabel" Content="No file is loaded." HorizontalAlignment="Left" Height="29" Margin="10,56,0,0" VerticalAlignment="Top" Width="763" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
